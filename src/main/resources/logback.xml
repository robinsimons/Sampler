<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	    <encoder>
	    	<pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
	    </encoder>
	</appender>
	     
	<appender name="SAMPLER" class="ch.qos.logback.core.FileAppender">
	    <File>Sampler.log</File>
		<encoder>
			<pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="LIB" class="ch.qos.logback.core.FileAppender">
	    <File>Lib.log</File>
		<encoder>
			<pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
		</encoder>
	</appender>
	     
	<logger name="sampler" level="ALL" additivity="false">
		<appender-ref ref="SAMPLER" />
		<appender-ref ref="STDOUT" />
	</logger>     
	
	<root>
	    <level value="INFO" />
	    <appender-ref ref="STDOUT" />
	    <appender-ref ref="LIB" />
	</root>
</configuration>